<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/gray_400"
    android:padding="@dimen/screen_padding"
    tools:context="com.example.myappnew.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="190dp"
        android:layout_height="31dp"
        android:layout_marginHorizontal="400dp"
        android:layout_marginVertical="400dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="30dp"
        android:background="@color/gray_400"
        android:text="@string/hello_custom_views"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <com.example.myappnew.CV.EmotionalFaceView
        android:id="@+id/emotionalFaceView"
        style="@style/Widget.Theme.MyAppNew.MyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</FrameLayout>